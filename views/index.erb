<div style='border: 3px dashed red'>
  <% if @visitor %>
    <p>Hello, <%= @visitor %>!</p>
    <% else %>
    <form action="/hello">
      My name is <%= @name %>.
      What's your name?
      <input type="text" name="name">
      <input type="submit" name="Submit">
    </form>
  <% end %>
